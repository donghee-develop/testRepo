<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.mapper.Mapper">

    <select id="selectUserById" resultType="com.test.domain.UserDTO">
        select * from user where id = #{id};
    </select>
    <select id="getLikeCount" resultType="java.lang.Integer">
        select count from store where id=#{id};
    </select>

    <update id="updateLikeCount">
        update store set count - #{count} where id = #{id};
    </update>

</mapper>